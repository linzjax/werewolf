#!/bin/sh
mkdir -p /home/mblackwood/webapps/werewolf/run
pid=$(/sbin/pidof /home/mblackwood/webapps/werewolf/bin/node)
if echo "$pid" | grep -q " "; then
  pid=""
fi
if [ -n "$pid" ]; then
  user=$(ps -p $pid -o user | tail -n 1)
  if [ $user = "mblackwood" ]; then
    exit 0
  fi
fi
nohup /home/mblackwood/webapps/werewolf/bin/node /home/mblackwood/webapps/werewolf/hello-world.js > /dev/null 2>&1 &
/sbin/pidof /home/mblackwood/webapps/werewolf/bin/node > /home/mblackwood/webapps/werewolf/run/node.pid
