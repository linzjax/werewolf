mkdir -p /home/mblackwood/webapps/werewolf/run
pid=$(/sbin/pidof /home/mblackwood/webapps/werewolf/bin/node)
if echo "$pid" | grep -q " "; then
    pid=""
fi
if [ -n "$pid" ]; then
  user=$(ps -p $pid -o user | tail -n 1)
  if [ $user = "mblackwood" ]; then
    kill "$pid"
    rm -f /home/mblackwood/webapps/werewolf/run/node.pid
  fi
fi
